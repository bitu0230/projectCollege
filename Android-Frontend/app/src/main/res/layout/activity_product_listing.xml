<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activity_products_page"
    android:orientation="vertical"
    >

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:weightSum="1"
        android:background="@color/purple_500">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/ib_back_product_recycler_listing"
            android:src="@drawable/baseline_arrow_back_24_white"
            android:layout_weight="0.2"
            android:background="@color/purple_500"
            android:layout_margin="@dimen/padding_8">
        </ImageButton>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/tv_search_term"
            android:textColor="@color/white"
            android:text="search_term"
            android:gravity="center"
            android:layout_margin="@dimen/padding_4"
            android:textSize="@dimen/padding_20"
            android:layout_weight="0.6">

        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/ib_view"
            android:layout_weight="0.2"
            android:background="@color/purple_500"
            android:layout_margin="@dimen/padding_12">

        </TextView>
    </androidx.appcompat.widget.LinearLayoutCompat>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/pb_loading_products_page">

        </ProgressBar>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/activity_recycler_view_product_listing">


        </androidx.recyclerview.widget.RecyclerView>
    </FrameLayout>



</androidx.appcompat.widget.LinearLayoutCompat>