<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:weightSum="1"
        android:background="@color/purple_500"
        android:layout_weight="0.08">
        <ImageButton
            android:id="@+id/ib_back_user_profile"
            android:layout_width="0dp"
            android:background="@color/purple_500"
            android:layout_height="match_parent"
            android:src="@drawable/baseline_arrow_back_24_white"
            android:layout_weight="0.2">

        </ImageButton>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/font_20"
            android:text="@string/user_profile">

        </TextView>

    </androidx.appcompat.widget.LinearLayoutCompat>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:weightSum="1"
        android:layout_weight="0.16">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1">

        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:src="@drawable/round_person_pin_24"
            android:layout_weight="0.6">

        </ImageView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="@string/user_info"
            android:textColor="@color/purple_500"
            android:textSize="@dimen/font_20"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_weight="0.3">

        </TextView>

    </androidx.appcompat.widget.LinearLayoutCompat>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:weightSum="1"
        android:layout_weight="0.56">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1">

        </TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:weightSum="1"
            android:layout_weight="0.15">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textColor="@color/black"
                android:textSize="@dimen/font_16"
                android:layout_marginLeft="@dimen/padding_20"
                android:text="@string/user_name"
                android:layout_weight="0.2">

            </TextView>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.05"
                android:text=":"
                android:textSize="@dimen/font_20"
                android:textStyle="bold"
                android:textColor="@color/black">

            </TextView>
            <TextView
                android:id="@+id/tv_userName_respose_user_profile_page"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textColor="@color/black"
                android:textSize="@dimen/font_16"
                android:layout_marginLeft="@dimen/padding_20"
                android:layout_weight="0.75">

            </TextView>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:weightSum="1"
            android:layout_weight="0.15">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textColor="@color/black"
                android:textSize="@dimen/font_16"
                android:layout_marginLeft="@dimen/padding_20"
                android:text="@string/user_email"
                android:layout_weight="0.2">

            </TextView>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text=":"
                android:textSize="@dimen/font_20"
                android:textStyle="bold"
                android:textColor="@color/black"                android:layout_weight="0.05">

            </TextView>
            <TextView
                android:id="@+id/tv_userEmail_response_user_profile_page"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textColor="@color/black"
                android:textSize="@dimen/font_16"
                android:layout_marginLeft="@dimen/padding_20"
                android:layout_weight="0.75">

            </TextView>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:weightSum="1"
            android:layout_weight="0.2">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textColor="@color/black"
                android:textSize="@dimen/font_20"
                android:layout_marginLeft="@dimen/padding_20"
                android:layout_weight="0.4">

            </TextView>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="@dimen/font_20"
                android:textStyle="bold"
                android:textColor="@color/black"                android:layout_weight="0.05">

            </TextView>
            <TextView
                android:id="@+id/tv_userAddress_home_user_info_page"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textColor="@color/black"
                android:textSize="@dimen/font_20"
                android:layout_marginLeft="@dimen/padding_20"
                android:layout_weight="0.55">

            </TextView>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:weightSum="1"
            android:layout_weight="0.2">
            <TextView
                android:id="@+id/tv_userAddress_2_user_info_page"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textColor="@color/black"
                android:textSize="@dimen/font_20"
                android:layout_marginLeft="@dimen/padding_20"
                android:layout_weight="0.4">

            </TextView>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="@dimen/font_20"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_weight="0.05">

            </TextView>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textColor="@color/black"
                android:textSize="@dimen/font_20"
                android:layout_marginLeft="@dimen/padding_20"
                android:id="@+id/tv_userAddress_office_user_info_page"
                android:layout_weight="0.55">

            </TextView>


        </LinearLayout>


    </androidx.appcompat.widget.LinearLayoutCompat>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:weightSum="1"
        android:layout_weight="0.2">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.3"
            android:weightSum="1"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.425">

            </TextView>
            <ImageButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/sharp_logout_24"
                android:id="@+id/ib_user_profile_sign_out"
                android:layout_weight="0.15">

            </ImageButton>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.425">

            </TextView>


        </LinearLayout>

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.appcompat.widget.LinearLayoutCompat>