<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/padding_4"
    android:id="@+id/item_product_listing"
    android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="@dimen/padding_8"
        app:cardCornerRadius="@dimen/padding_16">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="1">

            <ImageView
                android:id="@+id/iv_product_image_product_listing"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/padding_8"
                android:layout_weight="0.3"
                android:src="@drawable/ic_launcher_background"></ImageView>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:orientation="vertical"
                android:weightSum="1">

                <TextView
                    android:id="@+id/tv_product_name_product_listing"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:textColor="@color/black"
                    android:gravity="bottom"
                    android:textStyle="bold"
                    android:text="product name"
                    android:layout_marginLeft="@dimen/padding_8"
                    android:textSize="@dimen/font_16"
                    android:layout_weight="0.25">
                </TextView>

                <!--                <TextView-->
                <!--                    android:id="@+id/tv_product_price"-->
                <!--                    android:layout_width="match_parent"-->
                <!--                    android:layout_height="wrap_content"-->
                <!--                    android:text="product price"-->
                <!--                    android:textColor="@color/red"-->
                <!--                    android:layout_margin="@dimen/padding_4"-->
                <!--                    android:textSize="16sp">-->

                <!--                </TextView>-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.2"
                    android:orientation="horizontal"
                    android:weightSum="1">
                    <TextView
                        android:id="@+id/tv_productRAM_product_listing"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:layout_marginTop="@dimen/padding_4"
                        android:layout_marginBottom="@dimen/padding_4"
                        android:layout_marginRight="@dimen/padding_12"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_12"
                        android:text="@string/RAM"
                        android:gravity="center"
                        >

                    </TextView>
                    <TextView
                        android:id="@+id/tv_storage_product_listing"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:layout_marginTop="@dimen/padding_4"
                        android:layout_marginBottom="@dimen/padding_4"
                        android:layout_marginRight="@dimen/padding_12"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_12"
                        android:text="@string/storage"
                        android:gravity="center">

                    </TextView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.35"
                    android:orientation="horizontal"
                    android:weightSum="1">
                    <TextView
                        android:id="@+id/tv_battery_product_listing"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:layout_marginTop="@dimen/padding_4"
                        android:layout_marginBottom="@dimen/padding_4"
                        android:layout_marginRight="@dimen/padding_12"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_12"
                        android:text="@string/battery"
                        android:gravity="center">

                    </TextView>
                    <TextView
                        android:id="@+id/tv_processor_product_listing"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_12"
                        android:text="@string/processor_name"
                        android:layout_weight="0.5"
                        android:layout_marginTop="@dimen/padding_4"
                        android:layout_marginBottom="@dimen/padding_4"
                        android:layout_marginRight="@dimen/padding_12"
                        android:gravity="center">
                        >

                    </TextView>

                </LinearLayout>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/button_product_listing"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_margin="@dimen/padding_8"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:background="@drawable/buttow_round_corner"
                    android:layout_weight="0.2"
                    android:textSize="@dimen/font_12"
                    android:text="@string/view_details"></androidx.appcompat.widget.AppCompatButton>
            </LinearLayout>

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.cardview.widget.CardView>
    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_gravity="center"
        android:id="@+id/pb_loading_products_pagenation">

    </ProgressBar>



</androidx.appcompat.widget.LinearLayoutCompat>